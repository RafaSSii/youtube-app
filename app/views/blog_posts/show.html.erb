<% content_for :title, "Showing blog post" %>

<div class="flex flex-col w-full">

  <div class="flex gap-2 mb-4">
    <%= link_to "Home", blog_posts_path, class: "text-xl text-gray-900 hover:underline" %>
    <%= link_to "> #{@blog_post.title}", @blog_post, class: "text-xl text-gray-900 hover:underline" %>
  </div>

<%= image_tag(@blog_post.banner_image, class: "w-full h-64 object-cover") if @blog_post.banner_image.attached? %>

  <h1 class="font-bold text-4xl my-3"><%= @blog_post.title %></h1>
  
  <div class="my-5 flex flex-col gap-4">
    <div> <%= @blog_post.body %> </div>
    <span> Tags: <%= @blog_post.tags %> </span>
  </div>
<div class="flex items-center gap-4 mt-3">
    <%= link_to "Editar esse blog post", edit_blog_post_path(@blog_post), class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" if current_admin %>
    <%= link_to "Voltar para blog posts", blog_posts_path, class: "w-full sm:w-auto text-center sm:mt-0 sm:ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
    <%= button_to "Apagar este post", @blog_post, method: :delete, form_class: "sm:inline-block sm:mt-0 sm:ml-2", class: "w-full rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Tem certeza?" } if current_admin %>
</div>
</div>
